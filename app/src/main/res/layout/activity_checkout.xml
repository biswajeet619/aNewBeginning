<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login10"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="org.hitam.epics.biswajeet.anewbeginning.CheckoutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b8e5ed"
        android:elevation="10dp"
        android:padding="15dp">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Checkout"
            android:textColorHint="#000"
            android:textColor="#000" />

        <TextView
            android:id="@+id/checkout_total"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Total"
            android:textColor="#000" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/checkout_total"
            android:text="Item" />

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/checkout_total"
            android:text="Quantity" />
    </RelativeLayout>

    <ListView
        android:id="@+id/Checkout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/checkout_empty"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="No item added to cart.\nPlease select items to donate."
        android:textAlignment="center"
        android:textColor="#c5c5c5" />

    <Button
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b8e5ed"
        android:onClick="checkout"
        android:padding="10dp"
        android:text="Checkout"
        android:textSize="15sp"
        android:textColor="#000"
        android:id="@+id/button2" />

</LinearLayout>
